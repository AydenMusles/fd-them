{{ "//cdn.shopify.com/s/javascripts/currencies.js" | script_tag }}
{{ "jquery.currencies.min.js" | asset_url | script_tag }}

<script>
StyleHatch.currencyConverter = true;
Currency.format = '{{ settings.currency_format | default: 'money_with_currency_format' }}';
StyleHatch.shopCurrency = '{{ shop.currency }}';
/* Sometimes merchants change their shop currency, let's tell our JavaScript file */
Currency.moneyFormats[StyleHatch.shopCurrency].money_with_currency_format = {{ shop.money_with_currency_format | strip_html | json }};
Currency.moneyFormats[StyleHatch.shopCurrency].money_format = {{ shop.money_format | strip_html | json }};
/* Default currency */
StyleHatch.defaultCurrency = '{{ settings.default_currency | default: shop.currency }}';
</script>
